    "devDependencies": {
        "@types/node": "^20.8.0",
        "@types/ws": "^8.5.8",
        "typescript": "^5.2.2",
        "ts-node": "^10.9.1",
        "jest": "^29.7.0",
        "@types/jest": "^29.5.6"
    }
}
